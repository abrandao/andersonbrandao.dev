<h1>Listing Articles</h1>
<table class="w3-table w3-striped w3-bordered">
  <tr class="w3-blue">
    <th>ID</th>
    <th>Título</th>
    <th>Subtítulo</th>
    <th>Mostrar</th>
    <th>Apagar</th>
  </tr>
<% @posts.reverse.each do |post| %>
  <tr>
    <td><%= post.id %></td>
    <td><%= post.title %></td>
    <td><%= post.subtitle %></td>
    <td><%= button_to 'Mostrar', post_path(post), class: "w3-button w3-blue w3-round-xlarge", :method => :get %></td>
    <td><%= button_to 'Apagar', post_path(post), class: "w3-button w3-red w3-round-xlarge", method: :delete, data: { confirm: 'Tem certeza?' } %></td>
  </tr>
<% end %>
</table>

<% if current_user %>
  Logged in as <%= current_user.email %>.
  <%= button_to "Deslogar", logout_path, :method => :get %>
<% end %>
  <%= button_to "Nova postagem", new_post_path, :method => :get %>

<hr>